<div class="row">
  <div class="col s12">
    <h4 class="content-title">Assignment {{displayAssignmentNumber}} Submission Page</h4> 
  </div>
</div>

<div class="row">
  <div class="row">
    <div class="col s12">
      <div class="chip">{{displayBestGrade}}</div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      Upload your assignment.zip file here.
    </div>
  </div>
  <div class="row">
    <div class="col s12 filepicker"> 
    {{!-- DO NOT put anything inside this div, other than this form --}}
      <form>
        {{file-uploader markingRouteParameter=assignmentSubmissionRestRoute 
          markingCompletedCallback="markingCompleted" 
          uploadCallback="uploadCompleted" 
          uploadProgressCallback="uploadProgressChanged"
          uploadStartedCallback="markingStarted"
          uploadError="errorDuringUpload"}}
        </form>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="progress">
        <div class="determinate" id="assignment-upload-progress" style={{progress}}></div>
      </div>
    </div>
  </div>

  <div class="results row">
    <div class="row">
      <div class="error-result col s12">
        <span class="error-text">{{displayMarkingError}}</span>
        <span class="error-text">{{displayUploadError}}</span>
      </div>
    </div>

  <div class="row">

    <div class="row">
      <div class="row" style={{assignmentCurrentlyBeingMarked}}>
        <div class="col s4 offset-s5">
          <div class="preloader-wrapper big active">
            <div class="spinner-layer spinner-blue-only">
              <div class="circle-clipper left">
                <div class="circle"></div>
              </div>
              <div class="gap-patch">
                <div class="circle"></div>
              </div>
              <div class="circle-clipper right">
                <div class="circle"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s4 offset-s4">
          Marking... Please wait
        </div>
      </div>
    </div>

    <div class="row" style={{assignmentHasBeenMarked}}>
      <div class="row">
        <div class="row">
          <div class="col s8">
            <div id="grade">{{displayMarkingGrade}}</div>
          </div>
          <div class="col s4">
            <div class='send-results'>

              {{spinner-button action="sendResultsToStudentEmail" text="Send Results" loadingSubject=enableEmailPrepareSpinner}}
              {{!-- <button class="btn waves-effect waves-light" {{action 'sendResultsToStudentEmail'}}>Send Result<i class="material-icons right">email</i></button> --}}
            </div>
          </div>
        </div>
      </div>
    </div>

        <div class="col s12 marking">
            <span style="white-space: pre-line">{{displayMarkingResult}}</span>
        </div>
      </div>

    </div>
  </div>
</div>