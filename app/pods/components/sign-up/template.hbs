<div class="container">
  <div class="row">
    <form class="col s12" {{action "submitRequestForSecretKey" on="submit"}}>
      <div class="row">
        <div class="input-field col s12">
          {{input type="number" class="validate" id="student_number" value=studentNumber  tabindex="1" min="100000000" max="999999999" required="true"}}
          <label for="student_number" data-error="Not a student number">Student Number</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
        {{input type="email" class="validate" id="student_email" value=studentEmail  tabindex="2" required="true"}}
          <label for="student_email" data-error="Not a real email">Email (xx@cmail.carleton.ca) </label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col offset-s8 s4">
          <button class="btn waves-effect waves-light" type="submit" name="action">Send me my key!
                  <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>